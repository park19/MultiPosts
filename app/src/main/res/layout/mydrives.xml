<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/blacklineview"
        android:background="@android:color/black"
        android:layout_below="@+id/mydrives_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="＋ クラウドドライブ追加"
        android:id="@+id/mydrives_adddrive"
        android:textColor="#4169e1"
        android:textSize="50dp"
        android:layout_below="@+id/blacklineview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/blacklineview2"
        android:background="@android:color/black"
        android:layout_below="@+id/mydrives_adddrive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:text="My Drives"
        android:id="@+id/mydrives_title"
        android:textSize="55dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/blacklineview2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/mydrives_googledriveicon"
                android:src="@mipmap/google"
                android:longClickable="false"
                android:nestedScrollingEnabled="false"
                android:onClick="onClick" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GoogleDrive"
                    android:id="@+id/mydrives_googledrivetitle"
                    android:textSize="55dp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:id="@+id/mydrives_googledrivecapacityimage"
                    android:background="@drawable/layout_blueline"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="0%使用中　36GB中 0GB使用"
                    android:id="@+id/mydrives_googledrivecapacity"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/mydrives_onedriveicon"
                android:src="@mipmap/onedrive"
                android:onClick="onClick" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OneDrive"
                    android:id="@+id/mydrives_onedrivetitle"
                    android:textSize="55dp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:id="@+id/mydrives_onedrivecapacityimage"
                    android:background="@drawable/layout_blueline"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="0%使用中　28GB中 0GB使用"
                    android:id="@+id/mydrives_onedrivecapacity"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/mydrives_dropboxicon"
                android:src="@mipmap/dropbox"
                android:longClickable="false"
                android:nestedScrollingEnabled="false"
                android:onClick="onClick" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dropbox"
                    android:id="@+id/mydrives_dropboxtitle"
                    android:textSize="55dp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:onClick="onClick" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:id="@+id/mydrives_dropboxcapacityimage"
                    android:background="@drawable/layout_blueline"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="0%使用中　8.38GB中 0GB使用"
                    android:id="@+id/mydrives_dropboxcapa"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>