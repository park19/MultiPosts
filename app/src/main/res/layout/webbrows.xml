<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_webbrows_top">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ll_webbrows_ctrl"
        android:id="@+id/fl_webbrows_brows"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_webbrows_ctrl"
        android:background="@android:color/white"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fl_webbrows_twitter">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_webbrows_twitter"
                android:src = "@mipmap/logo_twitter"
                android:scaleType="fitCenter"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/pb_webbrows_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@android:style/Widget.ProgressBar"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fl_webbrows_facebook" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_webbrows_facebook"
                android:src = "@mipmap/logo_facebook"
                android:scaleType="fitCenter"
                android:layout_gravity="center" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar"
                android:id="@+id/pb_webbrows_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fl_webbrows_home" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_webbrows_home"
                android:src = "@mipmap/webbrows_home"
                android:scaleType="fitCenter"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fl_webbrows_mixi" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_webbrows_mixi"
                android:scaleType="fitCenter"
                android:src="@mipmap/logo_mixi"
                android:layout_gravity="center" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar"
                android:id="@+id/pb_webbrows_mixi"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fl_webbrows_googleplus" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_webbrows_googleplus"
                android:scaleType="fitCenter"
                android:src="@mipmap/logo_googleplus"
                android:layout_gravity="center" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar"
                android:id="@+id/pb_webbrows_googleplus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>